{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "lib": ["es2015", "es7", "es6", "dom", "es2017"],
    "baseUrl": ".",
    "typeRoots": [
      "@types"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "*": ["../../@types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}